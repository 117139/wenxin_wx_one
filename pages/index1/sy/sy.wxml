<view>
  <view class=''>
    <swiper indicator-dots='{{indicatorDots}}' autoplay='{{autoplay}}' interval='{{interval}}' duration='{{duration}}' circular='true'>
      <block wx:for='{{imgUrls}}'>
        <swiper-item>
          <image src='{{item}}' class='slide-image'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='selection'>
    <view class='header'>
      <text>精品推荐</text>
      <text class='text-all'>全部精品</text>
    </view>

    <view class='content'>
      <view class='content-item' wx:for='{{content}}'>
        <image src='/images/img1.png'></image>
        <view class='content-item-text'>111</view>
      </view>

    </view>

  </view>

  <view class='selection'>
    <view class='header'>
      <text>热门评测</text>
      <text class='text-all'>全部评测</text>
    </view>

    <view class='list-item' wx:for='{{listitem}}'>
      <view class='list-item-images'>
        <image src='/images/img2.png'></image>
        <image src='/images/img1.png' class='avatar'></image>
      </view>
      <view class='list-item-text'>
        <view class='list-item-text-title'>
          <text>标题标题</text>
        </view>
        <view class='list-item-text-content'>
          <text>标题标题展示内容展示内容展示内容展示内容展示内容展示内容</text>
        </view>
      </view>
    </view>

  </view>



</view>