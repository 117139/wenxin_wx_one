/* pages/fino/project_msg/project_msg.wxss */
 [v-cloak] {
            display: none;
        }
    	.msg_tit{
    		padding-left:12px;
    		font-size:16px;
			color:#2F2F2F;
			line-height:24px;
    	}
    	.form_box{
            position:relative;
            width:100%;
            background-color:#fff;
            padding:0 18px;
            box-sizing:border-box;
            margin-bottom:10px;
            font-size:14px;
            color:#9E9E9E;
            overflow:hidden;
            display:-webkit-box;
            display:-webkit-flex;
            display:flex;
        }
        .txt{
            width:100%;
            height:140px;
            line-height:14px;
            resize:none;
            padding:10px 0 40px;
            font-size:14px;
            box-sizing:border-box;
            border:0;
            margin:0;
            outline: none;
            color: #9E9E9E;
        }
        ::-moz-placeholder { color: #9E9E9E;font-size:14px;}
        ::-webkit-input-placeholder { color:#9E9E9E;font-size:14px;}
        :-ms-input-placeholder { color:#9E9E9E;font-size:14px;}
        .zishu{
            position:absolute;
            right:10px;bottom:0;
            color: #9E9E9E;
            line-height:20px;
            font-size:12px;
        }
        .btn{
			padding:0 42px;
			margin-top: 42px;
        }
        .msg_btn{
			height:36px;
			background:#0fc352;
			font-size:18px;
			color:#ffffff;
			text-align: center;
			line-height: 36px;
			border-radius: 30px;
        }